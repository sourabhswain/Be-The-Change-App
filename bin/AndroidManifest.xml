<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunny.bethechange"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
	
	<uses-feature android:name="android.hardware.camera" android:required="false"/>
<uses-permission android:name="android.permission.CAMERA" />
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
<uses-feature android:name="android.hardware.camera.autofocus" /> 
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.bethechange.StartScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>    
        </activity>
        <activity
            android:name="com.example.bethechange.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.bethechange.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
      	<activity
      	    android:name="com.example.bethechange.Options"
      	    android:label="@string/app_name">
      	</activity>   
         <activity
            android:name="com.example.bethechange.BrowsePicture"
            android:label="@string/app_name" >
            </activity>
         <activity
            android:name="com.example.bethechange.TakePic"
            android:label="@string/app_name" >
            </activity>   
         
         <activity android:name="com.example.bethechange.CustomGalleryActivity" >
            <intent-filter>
                <action android:name="luminous.ACTION_PICK" />
                <action android:name="luminous.ACTION_MULTIPLE_PICK" />
                <category android:name="android.intent.category.DEFAULT" />
                </intent-filter>
                 </activity>
                 
         <activity
             android:name="com.example.bethechange.PrevEmail"
             android:label="@string/app_name">     
         </activity>
         
         <activity
             android:name="com.example.bethechange.NewEmail"
             android:label="@string/app_name">     
         </activity>
         
         <activity
             android:name="com.example.bethechange.GetCurrentLocation"
             android:label="@string/app_name">     
         </activity>
         
    </application>

</manifest>
